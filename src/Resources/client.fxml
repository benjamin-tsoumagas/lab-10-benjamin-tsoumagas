<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="UI.clientUI"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField id="username" fx:id="username"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Message"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField id="message" fx:id="message"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button id="send" text="Send"
            onAction="#handleSendButton" fx:id="send"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button id="exit" text="Exit"
            onAction="#handleExitButton" fx:id="exit"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>
</GridPane>